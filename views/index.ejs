<%- include layouts/header.ejs %>

    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
        <% if( data ) { %>
            <div class="row">
                <% for( var i = 0; i < data.length; i++ ) { %>
                <div class="col-4"> 
                    <img class="grid-image" src="<%= data[i].imagepath[0] %>" />
                    <h4><%= data[i].imagetitle %></h4>
                    <p><%= data[i].imagedescription %></p>
                </div>
                <% if( ( ( i > 0) && ( i+1 ) % 3 == 0 ) ) { %>
                </div><div class="row">
                <% }  %>
                <% } %>
            </div>
        <% } %>
        </div>
        <div class="col-2"></div>
    </div>

